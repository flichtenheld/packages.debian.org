   charset = 'UTF-8'
   lang = 'en'

   organisation = 'Debian'
   homepage = 'http://www.debian.org/'
   packages_homepage = 'http://packages.debian.org/'
   searchformurl = packages_homepage
   search_url = '/'
   tags_url = 'http://debtags.alioth.debian.org/'
